@model Intranet.Models.AdiantamentoViagemParametros
<div class="panel panel-default">
    <div class="panel-heading">Configurações</div>
    <div class="panel-body">
        @using (Html.BeginUmbracoForm<Intranet.Controllers.Surfaces.SolicitacaoAdiantamentoSurfaceController>("Parametros", null, new { id = "form-adiantamento-parametro" }))
        {
            @Html.AntiForgeryToken()
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("Id", 1)

                <div class="form-group">
                    @Html.Label("Valor (R$/KM)", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("ValorUntKm", Model.ValorUntKm.ToString("0.00").Replace('.', ','), new { @class = "form-control money" })
                        @Html.ValidationMessageFor(model => model.ValorUntKm, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Valor Unt. Diária", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("ValorUntDiaria", Model.ValorUntDiaria.ToString("0.00").Replace('.', ','), new { @class = "form-control money" })
                        @Html.ValidationMessageFor(model => model.ValorUntDiaria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Valor Unt. Refeição", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("ValorUntRefeicao", Model.ValorUntRefeicao.ToString("0.00").Replace('.', ','), new { @class = "form-control money" })
                        @Html.ValidationMessageFor(model => model.ValorUntRefeicao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<script type="text/javascript">
    window.onload = function () {
        $('.money').mask("#.##0,00", { reverse: true });
    };
</script>
